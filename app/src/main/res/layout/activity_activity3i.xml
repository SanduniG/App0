<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_medium"
    tools:context=".Activity3i">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_max_large"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_foodie"
            android:textSize="35sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">

        <!-- <SearchView
             android:layout_width="match_parent"
             android:layout_height="wrap_content" /> -->

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:cardCornerRadius="@dimen/corner_radius_50"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Search"
                android:textSize="25sp"
                android:layout_margin="@dimen/margin_small"/>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_weight="0.25"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="90dp"
                android:layout_height="150dp"
                app:cardCornerRadius="@dimen/text_custom_size_48"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pizza"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/margin_medium"
                        android:background="@drawable/boarder"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/margin_medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

           <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/act3i"
               android:layout_margin="@dimen/margin_medium"/>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="150dp"
                app:cardCornerRadius="@dimen/text_custom_size_48"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"/>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="150dp"
                app:cardCornerRadius="@dimen/text_custom_size_48"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"/>
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>