                        android:layout_marginTop="5dp"
                        android:text="$99.00"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
