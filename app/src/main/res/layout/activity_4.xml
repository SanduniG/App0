<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bike"
            android:scaleType="fitXY"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/act4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_medium_plus">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_4"
                android:layout_gravity="end"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cart"
                android:layout_gravity="end"/>
        </LinearLayout>




    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="@dimen/margin_medium_plus">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Products"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="20sp"/>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/margin_medium_plus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/text_custom_size_48"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/pink"
                    android:layout_margin="@dimen/margin_medium">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_bg_act3"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_small"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_pizza"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_large"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-black"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/text_custom_size_48"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_medium">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_bg_act3"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_small"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_burger"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_large"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Burger"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-black"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/text_custom_size_48"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_medium">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_bg_act3"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_small"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_fries"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_large"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fries"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-black"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/text_custom_size_48"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_medium">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_bg_act3"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_small"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_pizza"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_large"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-black"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/text_custom_size_48"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_medium">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_bg_act3"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_small"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_pizza"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/margin_large"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-black"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </HorizontalScrollView>


    </FrameLayout>

    <!--  -->
</FrameLayout>